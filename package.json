{
  "name": "react-setstate-connect",
  "version": "2.0.0",
  "description": "Helper function to connect React's component to a redux-like store using functional setState.",
  "main": "lib/index.js",
  "scripts": {
    "build": "`yarn bin`/babel src --out-dir lib && yarn build:flow",
    "lint": "standard",
    "test": "yarn flow && yarn lint && yarn test:unit",
    "flow": "flow",
    "build:flow": "cp src/*.js.flow lib/",
    "test:unit": "jest --coverage"
  },
  "keywords": [
    "react",
    "setState",
    "redux",
    "flux",
    "alternative"
  ],
  "author": "Ernesto Freyre <ernestofreyreg@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com/ernestofreyreg/react-setstate-connect",
  "dependencies": {},
  "peerDependencies": {
    "react": "^16"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-1": "^6.24.1",
    "babel-register": "^6.26.0",
    "eslint-plugin-flowtype": "^2.50.0",
    "flow-bin": "^0.78.0",
    "jest": "^23.4.1",
    "react": "^16",
    "react-dom": "^16",
    "react-test-renderer": "^16.4.1",
    "standard": "^11.0.1"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ],
    "globals": [
      "test",
      "expect",
      "describe",
      "test",
      "expect",
      "afterAll",
      "$Keys",
      "Class",
      "ClientRect",
      "jest"
    ],
    "ignore": [
      "/lib/**/*.js"
    ]
  }
}
